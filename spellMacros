on("ready",function(){    
    on("chat:message",function(msg){
        if(msg.type=="api" && msg.content.indexOf("!deletespellMacros")==0){
            //deletes macros whose name begins with SPELL (not case-sensitive)
            var macroList = findObjs({type:"macro"});
            _.each(macroList,function(macro){
                macroName = macro.get("name");
                nameCheck = macroName.match(/zSPELL[a-zA-Z0-9]+/);
                if (nameCheck){
                    macro.remove();
                }
            });                
            

            
        }
        
